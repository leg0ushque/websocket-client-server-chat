@model WebsocketChat.Library.Models.LoginModel
@{
    ViewBag.Title = "Вход в аккаунт";
}



<div class="container d-flex justify-content-center align-items-center">
    <div class="mb-7 ml-7 mr-7 col-md-7">
        <h2>@ViewBag.Title</h2>
        <br />
        <form asp-controller="Auth" asp-action="Login" method="post" class="form-horizontal" role="form" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger" id="validationSummary"></div>

            <div class="form-group row pb-3">
                <label asp-for="Email" class="col-md-4 control-label"></label>
                <div class="col-md-8 p-0">
                    <input asp-for="Email" class="form-control" id="emailInput" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger inputError"></span>
                </div>
            </div>

            <div class="form-group row pb-3">
                <label asp-for="Password" class="col-md-4 control-label"></label>
                <div class="col-md-8 p-0">
                    <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="Пароль" required />
                    <span asp-validation-for="Password" class="text-danger inputError"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12 p-0">
                    <button type="submit" id="loginBtn" class="btn btn-primary col-md-12">Войти</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}